<Window
    x:Class="Wpf2D07.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf2D07"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid Background="{StaticResource MyGridBrushKey}">
        <Path
            Width="100"
            Height="100"
            Fill="White"
            Stretch="Uniform">
            <Path.Data>
                <RectangleGeometry Rect="0 0 1 1" />
            </Path.Data>
        </Path>
        <Path
            Width="100"
            Height="100"
            Fill="#EEEEEE"
            Stretch="Uniform">
            <Path.Data>
                <PathGeometry Figures="M0,0 L1,0 L1,0.1 L0,0.1 z" />
            </Path.Data>
        </Path>
        <Path
            Width="100"
            Height="100"
            Fill="#EEEEEE"
            Stretch="Uniform">
            <Path.Data>
                <PathGeometry Figures="M0,0 L0,1 L0.1,1 L0.1,0 z" />
            </Path.Data>
        </Path>
    </Grid>
</Window>
